import React from 'react';
import { BrowserRouter as Router, Routes, Route } from 'react-router-dom';
import PrincipalPage from './hocs/pages/PrincipalPage';
import AdminDashboard from './hocs/pages/AdminDashboard';
import UserDashboard from './hocs/pages/UserDashboard';

function App() {
    return (
        <Router>
            <Routes>
                <Route path="/" element={<PrincipalPage />} />
                <Route path="/admin" element={<AdminDashboard />} />
                <Route path="/user" element={<UserDashboard />} />
            </Routes>
        </Router>
    );
}

app.get('/sensor-events', (req, res) => {
    const sensorEvents = [
        { id: 1, name: 'Sensor Acceso', count: 10 },
        { id: 2, name: 'Sensor Movimiento', count: 20 },
        { id: 3, name: 'Sensor Temperatura', count: 30 }
    ];
    res.json(sensorEvents);
});

export default App;
